<%= render :partial => "shared/menu_bar"%>

<div id="tabs">
	<ul>
		<li><a href="#tabs-1"><%= @table_title %></a></li>
	</ul>
	<div id="tabs-1">
		<table class="panel-grid">
			<thead>
				<tr>
					<th>Name</th>
					<th class="{sorter: false}">Links</th>
					<th class="{sorter: false}">&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @vocabtypes.each do |vocabtype| %>
				  <tr>
				    <td><%= link_to vocabtype.name, vocabtype %></td>
						<td><%= link_to 'Vocabs',"#{ActionController::Base.relative_url_root}/vocabtypes/#{vocabtype.id}/vocabs/" %></td>
				    <td class="panel-grid-operations"><%= link_to 'Edit', edit_vocabtype_path(vocabtype) %> | <%= link_to 'Destroy', vocabtype, :confirm => 'Are you sure?', :method => :delete %></td>
				  </tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>


